<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomPanel">

        <LinearLayout
            android:id="@+id/claimOverviewLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottomPanel"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sendClaimTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp"
                android:text="Відправлення скарги"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/accent"
                android:textSize="20dp"/>

            <RelativeLayout
                android:id="@+id/cameraRelativeLayout"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@+id/sendClaimTextView"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/cameraLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <ImageView
                        android:id="@+id/cameraImageView"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/ic_local_see_black_24dp"/>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/photo_side"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="10dp"
                        android:layout_toLeftOf="@id/next_button"
                        android:clipToPadding="false"
                        android:paddingRight="10dp"
                        android:scrollbars="none"/>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/addressLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/addressImageView"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/ic_place_black_24dp"/>

                <LinearLayout
                    android:id="@+id/specificAddressLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/addressWordTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Адреса:"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>

                    <TextView
                        android:id="@+id/addressTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:text="м.Київ, вул. Теодора Драйзера 34/51"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/accent"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/crimeTypeLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/crimeTypeImageView"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/ic_warning_black_24dp"/>

                <LinearLayout
                    android:id="@+id/specificCrimeTypeLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/crimeWordTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Порушення:"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>

                    <TextView
                        android:id="@+id/crimeTypesTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:text="– Стоянка на перехресті\n– Стоянка другим рядом\n– Блокупання міського транспорту"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/accent"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/additionalInfoLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/additionalInfoImageView"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/ic_create_black_24dp"/>

                <LinearLayout
                    android:id="@+id/specificAdditionalInfoLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/additionalInfoTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="-3dp"
                        android:text="Додаткова інформація:"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>

                    <EditText
                        android:id="@+id/additionalInfoEditText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="6dp"
                        android:ems="10"
                        android:gravity="top|left"
                        android:inputType="textMultiLine"
                        android:text="сцяв під забором, плювався, смітив,кидався недопалками! бикувате гівно"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/identificationLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/identificationTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:gravity="center"
                    android:text="Реестрація, ферифікація, ідентифікація…\nВся необхідна інформація щодо користувача"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#1964a4"
                    android:textStyle="italic"/>

                <ImageView
                    android:id="@+id/identificationImageView"
                    android:layout_width="180dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/bankid"/>

                <Button
                    android:id="@+id/identificationButton"
                    android:layout_width="160dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/identification_button"
                    android:text="Верифікація\nгромадянина"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/bottomPanel"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_alignParentBottom="true"
        android:background="@color/primaryColor">

        <Button
            android:id="@+id/send_button"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_background"
            android:drawablePadding="15dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="@string/send"
            android:textAllCaps="false"
            android:textSize="17sp"
            android:enabled="false"/>
    </RelativeLayout>
</RelativeLayout>