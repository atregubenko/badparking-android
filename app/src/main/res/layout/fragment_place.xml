<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#49788d"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context=".MainActivity$PlaceholderFragment">


    <Button
        android:id="@+id/send"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:textSize="15sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/button_background"
        android:text="@string/send"
        android:textAllCaps="false"/>

    <LinearLayout
        android:id="@+id/positionButtonsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/send"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonDefineAddress"
            android:textSize="15sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/yellow_button_background"
            android:text="Ввести \nвручну"
            android:padding="10dp"
            android:drawablePadding="7dp"
            android:drawableTop="@android:drawable/ic_menu_edit"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/buttonDefineGPS"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:drawablePadding="7dp"
            android:drawableTop="@android:drawable/ic_menu_compass"
            android:background="@drawable/yellow_button_background"
            android:text="Увiмкнути \nGPS"
            android:textAllCaps="false"
            android:textSize="15sp"/>

        <Button
            android:id="@+id/buttonDefineMap"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:drawablePadding="7dp"
            android:drawableTop="@android:drawable/ic_menu_directions"
            android:background="@drawable/yellow_button_background"
            android:text="Вибрати\n на мапі"
            android:textSize="15sp"
            android:textAllCaps="false"/>
    </LinearLayout>


    <AutoCompleteTextView
        android:id="@+id/address"
        style="@style/parkingEditText"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_above="@+id/send"
        android:hint="Адреса"
        android:visibility="gone"
        android:inputType="textCapWords"/>

    <AutoCompleteTextView
        android:id="@+id/city"
        style="@style/parkingEditText"
        android:layout_width="match_parent"
        android:layout_above="@id/address"
        android:hint="Місто"
        android:visibility="gone"
        android:inputType="text"
        android:singleLine="true"
        android:textStyle="normal"/>

    <TextView
        android:id="@+id/topTextPlace"
        android:layout_marginTop="20dp"
        android:text="Нам потрiбно визначити адресу мiсця правопорушення, виберiть один з трьох варiантiв:"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</RelativeLayout>
