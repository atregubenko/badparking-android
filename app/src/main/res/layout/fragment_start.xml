<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#49788d"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context=".MainActivity$PlaceholderFragment">

    <EditText
        android:id="@+id/plates"
        style="@style/parkingEditText"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:hint="Номернi знаки"
        />

    <Spinner
        android:id="@+id/trespassSpinner"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_above="@id/plates"
        android:layout_marginTop="2dp"
        android:background="@drawable/edittext_background"/>

    <ImageView
        android:src="@android:drawable/arrow_down_float"
        android:layout_alignRight="@id/trespassSpinner"
        android:layout_alignTop="@id/trespassSpinner"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!--android:textColor="@android:color/white"-->
    <!--android:background="@drawable/spinner_white_holo_dark_am"-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/trespassSpinner"
        android:text="Виберiть порушення:"
        android:textColor="@android:color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/photo_side"
        android:layout_below="@id/plates"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        >

        <RelativeLayout
            android:id="@+id/first_image_holder"
            android:layout_width="@dimen/photo_side"
            android:layout_height="@dimen/photo_side"
            android:background="@drawable/white_dashed_frame"
            android:visibility="gone">

            <ImageView
                android:id="@+id/first_image"
                android:layout_width="@dimen/photo_side"
                android:layout_height="@dimen/photo_side"
                android:scaleType="centerCrop"
                />

            <ImageView
                android:id="@+id/close_first"
                android:layout_width="@dimen/abc_action_bar_default_height_material"
                android:layout_height="@dimen/abc_action_bar_default_height_material"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/circle_close"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/second_image_holder"
            android:layout_width="@dimen/photo_side"
            android:layout_height="@dimen/photo_side"
            android:layout_marginLeft="5dp"
            android:background="@drawable/white_dashed_frame"
            android:visibility="gone">

            <ImageView
                android:id="@+id/second_image"
                android:layout_width="@dimen/photo_side"
                android:layout_height="@dimen/photo_side"
                android:scaleType="centerCrop"
                />

            <ImageView
                android:id="@+id/close_second"
                android:layout_width="@dimen/abc_action_bar_default_height_material"
                android:layout_height="@dimen/abc_action_bar_default_height_material"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/circle_close"

                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/takePhotoButton"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/white_dashed_frame">

            <TextView
                android:id="@+id/addPhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingLeft="25dp"
                android:text="@string/add_photo"
                android:textColor="@android:color/white"
                android:textSize="18sp"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="-10dp"
                android:layout_toLeftOf="@id/addPhoto"
                android:src="@drawable/white_cross"/>

        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/next"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:drawableRight="@drawable/right_arrow_icon"
        android:background="@drawable/button_background"
        android:text="@string/next"
        android:textAllCaps="false"/>


</RelativeLayout>
